<%- include("header");%>

  <div class="container">
    <div class="form">
      <div class="buttonForm">
        <button onclick="changeForm('login')" id="login" class="active">Login</button>
        <button onclick="changeForm('submit')" id="submit" class="unactive">Submit</button>
      </div>
      <div class="login-box">
        <form action="/users/connection" method="POST" name="formLogSub" id="formLog">
          <h2>Login form</h2>
          <div class="user-box">
            <input type="text" name="login" required="yes">
            <label>Login</label>
          </div>
          <div class="user-box">
            <input type="password" name="password" required="yes">
            <label>Password</label>
          </div>
          <input type="submit" value="Login" class="btnLog">
      </form>
      <form action="/users/submit" method="POST" name="formLogSub" id="formSub">
          <h2>Submit form</h2>
          <div class="user-box">
            <input type="text" name="login" required="yes">
            <label>Login</label>
          </div>
          <div class="user-box">
            <input type="password" name="password" required="yes">
            <label>Password</label>
          </div>
          <div class="user-box">
            <input type="password" name="passwordC" required="yes">
            <label>Password confirmation</label>
          </div>
          <input type="submit" value="Submit" class="btnLog">
        </div>
    </div>
    </form>
  </div>

  <%- include("footer");%>